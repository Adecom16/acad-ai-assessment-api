# ===========================================
# Django Settings
# ===========================================
DJANGO_SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# ===========================================
# PostgreSQL Database
# ===========================================
# Option 1: Use DATABASE_URL (Render, Heroku, etc.)
# DATABASE_URL=postgres://user:password@host:5432/dbname

# Option 2: Individual settings (local development)
DB_NAME=assessment_db
DB_USER=postgres
DB_PASSWORD=your-password
DB_HOST=localhost
DB_PORT=5432

# ===========================================
# Grading Service
# ===========================================
# Options: 'mock' (TF-IDF algorithm) or 'llm' (OpenAI)
GRADING_BACKEND=mock

# LLM Configuration (only if GRADING_BACKEND=llm)
LLM_API_KEY=your-openai-api-key
LLM_MODEL=gpt-3.5-turbo

# ===========================================
# Email Configuration (Mailtrap - Recommended for Testing)
# ===========================================
# Sign up at https://mailtrap.io and get credentials from inbox settings
EMAIL_HOST=sandbox.smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-mailtrap-username
EMAIL_HOST_PASSWORD=your-mailtrap-password
DEFAULT_FROM_EMAIL=Assessment Engine <noreply@acadai.com>

# ===========================================
# Alternative: Gmail SMTP (Production)
# ===========================================
# Enable 2FA and create App Password: https://myaccount.google.com/apppasswords
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-16-char-app-password
# DEFAULT_FROM_EMAIL=Assessment Engine <your-email@gmail.com>

# ===========================================
# Frontend URL (for email links)
# ===========================================
FRONTEND_URL=http://localhost:8000
